                        </tr>
                        <tr>
                            <th>Specialty2</th>
                            <td>{{ company.specialty2 }}</td>
                        </tr>
                        <tr>
                            <th>Specialty3</th>
                            <td>{{ company.specialty3 }}</td>
                        </tr>
                        <tr>
                            <th>Logo</th>
                            <td>{{ company.logo }}</td>
                        </tr>
                        <tr>
                            <th>OwnerImage</th>
                            <td>{{ company.ownerImage }}</td>
                        </tr>
                    </tbody>
                </table>  
            </div>
        </div>
    </article>
{% endblock %}
