                <br>
                <a href="{{ path('company_edit', {'id': company.id}) }}">Edit Upholsterer</a>
                <br>
                {{ include('company/_delete_form.html.twig') }}

                <hr>
                <h1>Upholsterer - {{ company.name }}</h1>

                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ company.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
