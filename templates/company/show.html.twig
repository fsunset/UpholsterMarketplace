                            <td>{{ company.lastName }}</td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>{{ company.email }}</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>{{ company.phone }}</td>
                        </tr>
                        <tr>
                            <th>Website</th>
                            <td>{{ company.website }}</td>
                        </tr>
                        <tr>
                            <th>Address1</th>
                            <td>{{ company.address1 }}</td>
                        </tr>
                        <tr>
                            <th>Address2</th>
                            <td>{{ company.address2 }}</td>
                        </tr>
                        <tr>
                            <th>State</th>
                            <td>{{ company.state }}</td>
                        </tr>
                        <tr>
                            <th>County</th>
                            <td>{{ company.county }}</td>
                        </tr>
                        <tr>
                            <th>City</th>
                            <td>{{ company.city }}</td>
                        </tr>
                        <tr>
                            <th>Zip</th>
                            <td>{{ company.zip }}</td>
                        </tr>
                        <tr>
                            <th>Tagline</th>
