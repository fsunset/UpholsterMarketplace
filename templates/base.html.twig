<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
    	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Upholster Marketplace{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="header">
            <img src="{{ asset('build/img/header-BG-small.png') }}" class="show-for-small-only">
            <img src="{{ asset('build/img/header-BG-medium.png') }}" class="show-for-medium-only">
            <img src="{{ asset('build/img/header-BG-large.png') }}" class="show-for-large">
        </div>

        {# Provisional link to Home Page #}
        <article class="grid-container">
            <div class="grid-x top-margin-2em">
                <div class="cell text-right">
                    {% if app.request.get('_route') != "home" %}
                        <a href="{{ path('home') }}">Find an Upholsterer</a>
                        <br>
                    {% endif %}
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {% if app.request.get('_route') != "admin" %}
                            <a href="{{ path('admin') }}">Admin Home</a>
                        {% endif %}
                    {% else %}
                        {% if app.request.get('_route') != "app_login" %}
                            <a href="{{ path('app_login') }}">Admin Login</a>
                        {% endif %}
                    {% endif %}
                </div>
            </div>
        </article>


        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        {% block secondary_javascripts %}
        {% endblock %}
        
        <div class="footer">
            <img src="{{ asset('build/img/footer-BG-small.png') }}" class="show-for-small-only">
            <img src="{{ asset('build/img/footer-BG-medium.png') }}" class="show-for-medium-only">
            <img src="{{ asset('build/img/footer-BG-large.png') }}" class="show-for-large">
        </div>
    </body>
</html>
